<div class="container-fluid">
    <h1 id="title">Create some circles</h1>
    <form class="col-sm-3 circle-form" {{action "createCircle" on="submit"}}>
        <div class="form-group">
            <label for="radius">Radius</label>
            {{input class="form-control" id="radius" value=radius}}
        </div>
        <div class="form-group">
            <label for="diameter">Diameter</label>
            {{input class="form-control" id="diameter" value=diameter}}
        </div>
        <div class="form-group">
            <label for="circumference">Circumference</label>
            {{input class="form-control" id="circumference" value=circumference}}
        </div>
        <div class="form-group">
            <label for="area">Area</label>
            {{input id="area" class="form-control" value=area}}
        </div>
        <button type="submit" class="btn btn-primary" disabled={{isFormInvalid}}>Create Circle!</button>
    </form>
    <div class="col-sm-8">
    {{#each circles as |circle index|}}
        <div class="col-sm-3 bg-info circle-info">
            <h3>Circle {{index}}</h3>
            <button {{action "removeCircle" index}}type="button" class="close" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <ul>
                <li>radius: {{circle.radius}}</li>
                <li>diameter: {{circle.diameter}}</li>
                <li>circumference: {{circle.circumference}}</li>
                <li>area: {{circle.area}}</li>
            </ul>
        </div>
    {{/each}}
    </div>
</div>
